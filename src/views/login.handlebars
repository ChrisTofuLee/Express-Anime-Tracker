{{> publicNav}}
<div class="flex justify-center my-40">
  <div class="w-full md:w-2/3 lg:w-2/3 xl:w-1/3 shadow sm:shadow-md md:shadow-lg lg:shadow-xl xl:shadow-2xl">
    <form class="bg-gray-200 shadow-md rounded px-8 pt-6 pb-8" id="login">
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
          Username
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="username" type="email" placeholder="Enter email">
      </div>
      <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
          Password
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="password" type="password" placeholder="Enter password">
      </div>
      <div class="flex items-center justify-between">
        <button
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit">
          Sign In
        </button>
        <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="/signup">
          Sign Up?
        </a>
      </div>
      <p class="text-center text-gray-500 text-xs pt-2">
        &copy;2020 C&C Corp. All rights reserved.
      </p>
    </form>

  </div>
</div>
