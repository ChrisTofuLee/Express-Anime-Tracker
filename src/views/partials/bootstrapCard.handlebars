<div id={{id}} class="resultSelect container flex justify-center my-2">
    <div id={{id}} class="resultSelect card mb-3 content-center" style="max-width: 900px;">
        <div  id={{id}} class="resultSelect row no-gutters">
            <div id={{id}} class="resultSelect col-md-4 my-auto ml-4" style="max-width: 150px;">
                <img src={{attributes.posterImage.small}} id={{id}} class="resultSelect card-img" style="max-width: 150px;"
                    alt={{attributes.canonicalTitle}}>
            </div>
          
                <div id={{id}} class="resultSelect col-md-8">
                    <div id={{id}} class="resultSelect card-body ml-4">
                        <h5 id={{id}} class="resultSelect card-title">{{attributes.canonicalTitle}}</h5>
                        <p id={{id}} class="resultSelect card-text text-wrap truncate" style="max-height: 100px;">{{attributes.synopsis}}</p>
                        <p id={{id}} class="resultSelect card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                    </div>
                </div>
          
        </div>
    </div>
</div>